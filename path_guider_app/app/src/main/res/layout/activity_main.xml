<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pantianlei.pathguider.MainActivity">

    <TextView
        android:id="@+id/connectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="What do you wanna find?" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/connectText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="50dp"
        android:background="@drawable/roundbutton"
        app:srcCompat="@drawable/ic_keyboard_voice_white_24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:id="@+id/server">
        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="connect" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ip:" />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="192.168.50.64"
            android:id="@+id/IPText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="port:"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="6666"
            android:id="@+id/PortText"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/defs">
        <Button
            android:id="@+id/sendDEFButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send def" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/defText"
            android:text="do you know da wae?"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:id="@+id/find">
        <Button
            android:id="@+id/sendFINDButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send find" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/findText"
            android:text="do you know da wae?"/>
    </LinearLayout>





</RelativeLayout>
